<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayoutFragmentBuscaUsuario"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayoutFragmentBuscaUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/editTextFragmentBuscaUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/ic_action_search"
            android:hint="@string/buscarUsuario"
            android:paddingEnd="16dp"
            android:paddingStart="16dp" />
    </android.support.design.widget.TextInputLayout>

    <ListView
        android:id="@+id/listViewFragmentBuscaUsuario"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textInputLayoutFragmentBuscaUsuario" />

    <ProgressBar
        android:id="@+id/progressBarFragmentBuscaUsuario"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />
</RelativeLayout>