<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="joaopogiolli.com.br.loyalty.Fragments.ListaPromocoesFragment">


    <TextView
        android:id="@+id/textViewSemPromocoesFragmentListaPromocoes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/naoPossuiPromocoes"
        android:textAlignment="center"
        android:textSize="24sp"
        android:visibility="gone" />

    <ListView
        android:id="@+id/listViewFragmentListaPromocoes"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ListView>

    <ProgressBar
        android:id="@+id/progressBarFragmentListaPromocoes"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

</FrameLayout>
